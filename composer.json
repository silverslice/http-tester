{
    "name": "silverslice/http-tester",
    "description": "Lightweight http testing tool",
    "keywords": ["tests", "http", "curl"],
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Mikheev",
            "email": "silver_slice@mail.ru"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "Silverslice\\HttpTester\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
}
